@model List<Bookify.Models.Entity.Book>
@{
    ViewData["Title"] = "Book";
}

<!--  Header End -->
<div class="body-wrapper-inner">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Book</h5>
                <div class="mb-3">
                    <a asp-for="Book" asp-action="Add" class="btn btn-primary mt-2">
                        <i class="ti ti-mood-smile"></i> Add Book
                    </a>
                </div>
                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Genre</th>
                            <th>Isbn</th>
                            <th>Total Pages</th>
                            <th>Author</th>
                            <th>Publisher</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.GenreName</td>
                                <td>@item.Isbn</td>
                                <td>@item.TotalPages</td>
                                <td>@item.AuthorName</td>
                                <td>@item.PublisherName</td>
                                <td class="text-center">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                                        <i class="ti ti-edit"></i>
                                    </a>
                                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">
                                        <i class="ti ti-trash-x"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
        @if (@TempData["msg"] is not null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @TempData["msg"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>